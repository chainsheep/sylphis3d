<?xml version="1.0" encoding="utf-8"?>

<particlesystemdefs>
  <particlesystem name="spark">

    <material>textures/spark</material>

    <emitter shape="sphere">
      <radius>0.0</radius>
      <rate>5.0</rate>
      <time>10.1</time>
    </emitter>

    <budget>1000</budget>

    <rotation>0.0</rotation>
    <rotationspeed>0.0</rotationspeed>

    <particledef type="tracer">
      <size>
        <interpolator>
          <node key="0.0">
            <float>0.6</float>
          </node>
          <node key="0.6">
            <float>0.6</float>
          </node>
          <node key="1.0">
            <float>0.8</float>
          </node>
        </interpolator>
      </size>
      <aspectratio>
        <interpolator>
          <node key="0.1">
            <float>0.1</float>
          </node>
        </interpolator>
      </aspectratio>
    </particledef>
    
    <lifetime>1.5</lifetime>

    <acceleration>0.0 -400.0 0.0</acceleration>

    <spawn direction="aimed" variation="20.0" velocitymin="150.0" velocitymax="200.0" />

    <collitions enabled="true" bounce="0.3"/>

  </particlesystem>
</particlesystemdefs>